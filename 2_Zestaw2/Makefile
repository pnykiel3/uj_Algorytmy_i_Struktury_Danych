DIR = `basename $(CURDIR)`
########################################
 LIB1 = setlinked
 LIB2 = setHashed
 EXEC1 = main
 EXEC2 = liczenie
########################################
 EXECS = $(EXEC1) $(EXEC2)
########################################
 OBJS1 = $(EXEC1).o $(EXEC2).o
########################################
 LIBS1 = $(LIB1).h $(LIB2).h
########################################
 COFLAGS = -Wall -O -std=c++14
 LDFLAGS = -Wall -O
 CO = g++
 LD = $(CO)
########################################
 %.o: %.cpp
	$(CO) $(COFLAGS) -c $<
########################################
.PHONY: all
all: $(EXECS)
########################################
$(EXEC1): $(OBJS1) $(LIBS1)
	$(LD) -o $@ $(LDFLAGS) $^
########################################
.PHONY: run
run: $(EXECS)
	./$(EXEC1)
########################################
.PHONY: liczenie
run: $(EXECS)
	./$(EXEC2)
########################################
.PHONY: clean
clean:
	rm -f *.o  *~ $(EXECS)
########################################
.PHONY: tar
tar: clean
	(cd ../; tar -cvzf "$(DIR)".tar.gz  "$(DIR)" )
########################################
