DIR = `basename $(CURDIR)`
########################################
 EXEC1 = main
########################################
 EXECS = $(EXEC1)
########################################
 OBJS1 = $(EXEC1).o
########################################
 COFLAGS = -Wall -O -std=c++11
 LDFLAGS = -Wall -O
 CO = g++
 LD = $(CO)
########################################
 %.o: %.cpp
	$(CO) $(COFLAGS) -c $<
########################################
.PHONY: all
all: $(EXECS)
########################################
$(EXEC1): $(OBJS1)
	$(LD) -o $@ $(LDFLAGS) $^
########################################
.PHONY: run
run: $(EXECS)
	./$(EXEC1)
########################################
.PHONY: clean
clean:
	rm -f *.o  *~ $(EXECS)
########################################
.PHONY: tar
tar: clean
	(cd ../; tar -cvzf "$(DIR)".tar.gz  "$(DIR)" )
########################################
